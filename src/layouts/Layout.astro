---
import { SEO } from "astro-seo";
import "@fontsource-variable/inter/index.css";

export interface Props {
  title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/opengraph.jpg",
  Astro.site
).toString();

const { title } = Astro.props;


const makeTitle = title
  ? title + " | PF0"
  : "PF0"
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <SEO
      title={makeTitle}
      description="PF0's personal website!"
      canonical="https://pf0-dev.github.io/"
    />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is: global>
/* Improves speed https://css-tricks.com/almanac/properties/c/content-visibility */
img {
content-visibility: auto;
}

html::-webkit-scrollbar {
    width: 1vw;
    background-color: #a7edff;
}

html::-webkit-scrollbar-thumb {
  background-color: #356f77;
}

@font-face {font-family: AlphaBeta; src: url('fonts/alphabeta.ttf');} 
h1 {
  color: black;
  font-size: 8vw;
  text-align: center;
  font-family: AlphaBeta;
}

body {
  margin: 0;
  background-size: 100% 100%;
  background-attachment: fixed;
}

</style>